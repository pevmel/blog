<%= form_for(@comment, url: comment_path) do |f| %>
  <div class="form-group">
      <%= f.hidden_field :supplier_type %>
      <%= f.hidden_field :supplier_id %>
      <%= f.text_area :content, class: "form-control", placeholder: "Enter your comment..." %>
  </div>
  <div class="form-group clearfix">
      <%= f.button "Add Comment", class: "btn btn-primary btn-sm float-right" %>
  </div>
<% end %>
<hr>
